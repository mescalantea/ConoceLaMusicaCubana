<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.github.mescalantea.conocelamusicacubana">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.SplashScreenActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.MenuActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.PlayerNameActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.QuestionActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".view.ResultActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".view.ScoreActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".view.RecordsActivity"
            android:screenOrientation="portrait"></activity>
    </application>

</manifest>